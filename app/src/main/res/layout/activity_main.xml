<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="90dp"
        android:id="@+id/show"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_height="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/show"
        app:layout_constraintRight_toRightOf="@id/show"
        app:layout_constraintTop_toBottomOf="@id/show"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="t"
        android:id="@+id/showt1"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/showt1"
        app:layout_constraintRight_toRightOf="@id/showt1"
        app:layout_constraintTop_toBottomOf="@id/showt1"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="t"
        android:id="@+id/showt2"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>